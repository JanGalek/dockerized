alias node8='docker run --rm --interactive --tty --volume $PWD:/app -w /app --user $(id -u):$(id -g) node:8 node '
alias npm8-6='docker run --rm --interactive --tty --volume $PWD:/usr/src/app -w /usr/src/app --user $(id -u):$(id -g) node:8 npm --loglevel=warn '
alias npx8-6='docker run --rm --interactive --tty --volume $PWD:/usr/src/app -w /usr/src/app --user $(id -u):$(id -g) node:8 px --loglevel=warn '
alias dockerized-update-8-node='docker pull node:8'
